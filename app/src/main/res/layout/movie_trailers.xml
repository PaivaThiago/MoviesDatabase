<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEE"
    android:layout_margin="8dp">

    <ImageButton
        android:id="@+id/playTrailerImageButton"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#EEE"
        android:contentDescription="@string/trailers"
        android:src="@drawable/ic_play_trailer"/>

    <ImageButton
        android:id="@+id/shareTrailerImageButton"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:background="#EEE"
        android:contentDescription="@string/share"
        android:src="@drawable/ic_share"/>

    <TextView
        android:id="@+id/movieTrailerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:text="@string/trailers"
        android:layout_gravity="center_vertical"
        android:textColor="@color/text"
        android:textSize="20sp"/>

</LinearLayout>